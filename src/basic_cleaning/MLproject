name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name for the artifact
        type: string

       output_artifact:
        description: Fully qualified name for the artifact
        type: string

       output_type:
        description: Fully qualified name for the artifact
        type: string

       min_price:
        description: Fully qualified name for the artifact
        type: float

       max_price:
        description: Fully qualified name for the artifact
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  -- output_artifact { output_artifact}  -- output_file { output_file}  -- min_price { min_price}  -- max_price { max_price} 
