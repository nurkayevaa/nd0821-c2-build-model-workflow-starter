name: download_data
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Fully qualified name for the artifact
        type: str
      output_name:
        description: Name for the W&B artifact that will be created
        type: str
      output_type:
        description: Type of the artifact to create
        type: str
        default: raw_data
      output_description:
        description: Description for the artifact
        type: str
  min_price:
        description: min price for the artifact
        type: float
  max_price:
        description: min price for the artifact
        type: float

    command: >-
      python run.py --input_artifact {input_artifact} \
                              --output_name {artifact_name} \
                              --output_type {artifact_type} \
                              --output_description {artifact_description} \
                              --min_price {max_price} \
                              --max_price {max_price} \

 